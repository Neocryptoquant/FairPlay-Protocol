{
  "compilerOptions": {
    
    "types": ["mocha", "chai"],
    "composite": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015"],
    "target": "es6",
    "esModuleInterop": true
  }
}
